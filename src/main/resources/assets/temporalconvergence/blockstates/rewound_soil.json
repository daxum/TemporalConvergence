{
    "multipart": [
        {
            "apply": { "model": "temporalconvergence:rewound_soil" }
        },

        {
            "when": {"north": "true"},
            "apply": { "model": "temporalconvergence:rewound_soil_side" }
        },

        {
            "when": {"east": "true"},
            "apply": { "model": "temporalconvergence:rewound_soil_side", "y": 90 }
        },

        {
            "when": {"south": "true"},
            "apply": { "model": "temporalconvergence:rewound_soil_side", "y": 180 }
        },

        {
            "when": {"west": "true"},
            "apply": { "model": "temporalconvergence:rewound_soil_side", "y": 270 }
        }
    ]
}
