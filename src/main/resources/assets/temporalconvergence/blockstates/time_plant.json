{
    "multipart": [
        {   "apply": { "model": "temporalconvergence:time_plant" }},
        {   "when": { "OR": [{"plantstate": "daytime"}, {"plantstate": "nighttime"}] },
            "apply": { "model": "temporalconvergence:time_plant_bulb" }
        },
        {   "when": { "plantstate": "withered" },
            "apply": { "model": "temporalconvergence:time_plant_bulb_withered" }
        }
    ]
}
